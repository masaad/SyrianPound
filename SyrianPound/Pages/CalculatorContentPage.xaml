<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:SyrianPound;assembly=SyrianPound"
             x:Class="SyrianPound.CalculatorContentPage"
             Title="{Binding TabName}"
             Icon="Calculator.png"
             BackgroundColor="Black">
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style TargetType="Button">
        <Setter Property="BorderRadius" Value="0"/>
        <Setter Property="BackgroundColor" Value="#FFDDDDDD"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontSize" Value="25"/>
      </Style>
    </ResourceDictionary>
  </ContentPage.Resources>
	<ContentPage.Content>
    <Grid HorizontalOptions="FillAndExpand"
          RowSpacing="1"
          ColumnSpacing="1">
      <Grid.Padding>
        <OnPlatform x:TypeArguments="Thickness"
    						iOS="0, 20, 0, 0" />
      </Grid.Padding>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.25*"/>
        <ColumnDefinition Width="0.25*"/>
        <ColumnDefinition Width="0.25*"/>
        <ColumnDefinition Width="0.25*"/>        
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <Button Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Text="AC"
              Command="{Binding AcButtonCommand}"
              BackgroundColor="#FFC7C7C7"/>
      <StackLayout Grid.Row="2"
                   Grid.Column="3"
                   Orientation="Vertical"
                   BackgroundColor="#FFC7C7C7">
        <Switch x:Name="SwitchKey" 
                HorizontalOptions="Center"
                Toggled="SwitchKey_OnToggled"/>
        <Label x:Name="SwitchLabel"
               HorizontalOptions="Center"/>
      </StackLayout>
      
      <Label x:Name="LblConvertOperation"              
             Grid.Row="0"
             Grid.Column="1"
             TextColor="White"
             Text="{Binding ConversionToDisplay}"/>
      <Label x:Name="LblResults"
             Grid.Row="1"
             Grid.Column="0"
             Grid.ColumnSpan="4"
             HorizontalOptions="EndAndExpand"
             VerticalOptions="CenterAndExpand"
             TextColor="White"
             FontSize="50"
             Text="{Binding Results}"/>
         
      <Button Grid.Row="3"
              Grid.Column="0"
              Text="7"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="7"/>
      <Button Grid.Row="3"
              Grid.Column="1"
              Text="8"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="8"/>
      <Button Grid.Row="3"
              Grid.Column="2"
              Text="9"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="9"/>
      <Button Grid.Row="3"
              Grid.Column="3"
              Text="{local:TranslateExtension BtnDollarToSyrianPound}"
              Command="{Binding OperationButtonCommand}"
              CommandParameter="From-$"
              BackgroundColor="#FFFFA500"
              TextColor="White"
              FontSize="14"/>
      <Button Grid.Row="4"
              Grid.Column="0"
              Text="4"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="4"/>
      <Button Grid.Row="4"
              Grid.Column="1"
              Text="5"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="5"/>
      <Button Grid.Row="4"
              Grid.Column="2"
              Text="6"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="6"/>
      <Button Grid.Row="4"
              Grid.Column="3"
              Text="{local:TranslateExtension BtnEuroToSyrianPound}"
              Command="{Binding OperationButtonCommand}"
              CommandParameter="From-€"
              BackgroundColor="#FFFFA500"
              TextColor="White"
              FontSize="14"/>
      <Button Grid.Row="5"
              Grid.Column="0"
              Text="1"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="1"/>
      <Button Grid.Row="5"
              Grid.Column="1"
              Text="2"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="2"/>
      <Button Grid.Row="5"
              Grid.Column="2"
              Text="3"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="3"/>
      <Button Grid.Row="5"
              Grid.Column="3"
              Text="{local:TranslateExtension BtnSyrianPoundToDollar}"
              Command="{Binding OperationButtonCommand}"
              CommandParameter="To-$"
              BackgroundColor="#FFFFA500"
              TextColor="White"
              FontSize="14"/>
      <Button Grid.Row="6"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Text="0"
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="0"/>     
      <Button Grid.Row="6"
              Grid.Column="2"
              Text="."
              Command="{Binding NumbersButtonCommand}"
              CommandParameter="."/>
      <Button Grid.Row="6"
             Grid.Column="3"
             Text="{local:TranslateExtension BtnSyrianPoundToEuro}"
                Command="{Binding OperationButtonCommand}"
              CommandParameter="To-€"
             BackgroundColor="#FFFFA500"
             TextColor="White"
             FontSize="14"/>
    </Grid>
	</ContentPage.Content>
</ContentPage>
